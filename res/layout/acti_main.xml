<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
     <FrameLayout
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/leftBtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dip"
            android:src="@drawable/icon_refresh"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />


        <TextView
            android:id="@+id/titleView"
            style="@style/white20Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聊天"
            android:gravity="center"
       	    android:layout_gravity="center" />


        
        <ImageView
            android:id="@+id/rightBtn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:src="@drawable/add"
            android:layout_gravity="center_vertical|right" />
        
    </FrameLayout>
    

    <LinearLayout
        android:id="@+id/LinearLayout_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
        
        
    <FrameLayout
        android:id="@+id/page1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/page2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/page3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/page4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >
    </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_main_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"            
            >
            
	        <Button
	            android:id="@+id/chatBtn"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@color/transparent_background"
	            android:drawableTop="@drawable/buttom_btn_main_icon"
	            android:text="@string/main_group_str"
	            android:paddingTop="3dp"
	            android:textSize="15sp"
	            android:textColor="@color/white" />
            
             <TextView
                 android:id="@+id/countView"
                 android:layout_width="15dp"
                 android:layout_height="15dp"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginTop="5dp"
                 android:background="@drawable/shape_dot"
                 android:gravity="center"
                 android:visibility="gone"
                 android:textColor="@color/white"
                 android:textSize="8dp"/>
        </RelativeLayout>
        
	 <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"            
            >
        <Button
            android:id="@+id/contactBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent_background"
            android:drawableTop="@drawable/buttom_btn_contacts_icon"
            android:text="@string/contacts_str"
            android:paddingTop="5dp"
            android:textSize="15sp"
            android:textColor="@color/white" />
        
        
             <TextView
                 android:id="@+id/countView1"
                 android:layout_width="15dp"
                 android:layout_height="15dp"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginTop="5dp"
                 android:background="@drawable/shape_dot"
                 android:gravity="center"
                 android:visibility="gone"
                 android:textColor="@color/white"
                 android:textSize="8dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/adrBtn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/transparent_background"
            android:drawableTop="@drawable/buttom_btn_explore_icon"
            android:text="@string/explore_str"
            android:paddingTop="3dp"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/meBtn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/transparent_background"
            android:drawableTop="@drawable/buttom_btn_me_icon"
            android:text="@string/me_str"
            android:paddingTop="5dp"
            android:textSize="15sp"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>